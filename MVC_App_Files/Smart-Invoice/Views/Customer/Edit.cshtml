@page
@{
}
<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Customer Management</h4>
            <h6>Add/Update Customer</h6>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-controller="Customer" asp-action="Edit" method="post">
                <input type="hidden" name="customer_id" value="@ViewBag.Customer.customer_id" />
                <div class="row">
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Customer Name</label>
                            <input name="name" type="text" class="form-control" value="@ViewBag.Customer.name" />
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Email</label>
                            <input name="email" type="text" class="form-control" value="@ViewBag.Customer.email" />
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Phone</label>
                            <input name="phone" type="text" class="form-control" value="@ViewBag.Customer.phone" />
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>Description</label>
                            <textarea name="description" class="form-control">@ViewBag.Customer.description</textarea>
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Store</label>
                            <select name="Store" class="form-control">
                                <option selected disabled>Select</option>
                                @foreach (var user in ViewBag.sto)
                                {
                                    <option value="@user.store_id" selected="@(user.store_id == ViewBag.Customer.store_id)">@user.store_name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-submit me-2">Submit</button>
                        <a href="javascript:void(0);" class="btn btn-cancel">Cancel</a>
                    </div>
                </div>
            </form>
            </div>

        </div>
    </div>
