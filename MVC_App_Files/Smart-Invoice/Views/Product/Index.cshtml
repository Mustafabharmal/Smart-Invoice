            <div class="table-responsive">
                <table class="table  datanew">
                    <thead>
                        <tr>
                            <th hidden>updated at</th>
                            <th>Photo</th>
                            <th>Product name</th>
                            <th>quantity</th>
                            <th>min quantity</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Created Store By</th>
                            @*<th>Created User By</th>*@
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in ViewBag.Product)
                            {
                            <tr>
                                <td hidden>@user.updated_at.ToString("MM/dd/yyyy")</td>
                                <td>
                                    @if (user.image != null && user.image.Length > 0)
                                    {
                                        var base64String = Convert.ToBase64String(user.image);

                                        <a href="javascript:void(0);" class="product-img">
                                            <img src="data:image/png;base64,@base64String" alt="Avatar" class="img-thumbnail" />
                                        </a>
                                    }
                                </td>

                                <td>@user.product_name</td>
                                <td>@user.quantity</td>
                                <td>@user.min_quantity</td>
                                <td>@user.category_id</td>
                                <td>@user.description</td>
                                <td>@user.price</td>
                                <td>@user.store_id</td>
                                @*<td>@user.user_id</td>*@
                                <td>
                                    <a class="me-3" asp-action="Edit" asp-route-id="@user.product_id">
                                        <img src="assets/img/icons/edit.svg" alt="Edit">
                                    </a>
                                    <a class="me-3 confirm-text" asp-action="Delete" asp-route-id="@user.product_id">
                                        <img src="assets/img/icons/delete.svg" alt="Delete">
                                    </a>

                                </td>
                            </tr>
                            }
                    </tbody>
                </table>
