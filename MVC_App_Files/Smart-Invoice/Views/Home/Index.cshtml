    <div class="row">
        <div class="col-lg-6 col-sm-12 col-12 d-flex">
            <div class="card flex-fill">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">Recently Added Category</h4>
                    <div class="dropdown">
                        <a href="javascript:void(0);" data-bs-toggle="dropdown" aria-expanded="false"
                           class="dropset">
                            <i class="fa fa-ellipsis-v"></i>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <li>
                                <a asp-area="" asp-controller="Category" asp-action="Index" class="dropdown-item">Category List</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="Category" asp-action="Create" class="dropdown-item">Category Add</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive dataview">
                        <table class="table datatable ">
                            <thead>
                                <tr>
                                    <th>Sno</th>
                                    <th>Category</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var count = 1;
                                }

                                @foreach (var user in ViewBag.CatHead)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td class="productimgname">

                                            @if (user.image != null && user.image.Length > 0)
                                            {
                                                var base64String = Convert.ToBase64String(user.image);

                                                <a href="javascript:void(0);" class="product-img">
                                                    <img src="data:image/png;base64,@base64String" alt="Avatar" class="img-thumbnail" />
                                                </a>
                                            }
                                            <a asp-area="" asp-controller="Category" asp-action="Index">@user.product_name</a>
                                        </td>
                                        <td>@user.description </td>
                                    </tr>
                                    count++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
