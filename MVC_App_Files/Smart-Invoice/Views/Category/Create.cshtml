
@{
    var role = Context.Session.GetInt32("Role");
}

<div class="content">
    <div class="page-header">
        <div class="page-title">
            <h4>Product Add Category</h4>
            <h6>Create new product Category</h6>
        </div>
    </div>

    <div class="card">
        <div class="card-body">

            <form asp-controller="Category" asp-action="Add" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Category Name</label>
                            <input name="CategoryName" class="form-control" required />
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label>Category Code</label>
                            <input name="CategoryCode" class="form-control" required />
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>Description</label>
                            <textarea name="Description" class="form-control"></textarea>
                        </div>
                    </div>
                    @if (role == 0)
                    {
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Shop</label>
                                <select name="shopid" class="form-control">
                                    <option>Select</option>
                                    @foreach (var Shop in ViewBag.Shop)
                                    {
                                        <option value="@Shop.store_id">@Shop.store_name</option>
                                    }
                                    @*<option value="1">User</option>
                        <option value="2">Employee</option>*@
                                </select>
                            </div>
                        </div>
                    }
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>Category Image</label>
                            <div class="image-upload">
                                <input name="CategoryImage" type="file" class="form-control" />
                                <div class="image-uploads">
                                    <img src="~/assets/img/icons/upload.svg" alt="img">
                                    <h4>Drag and drop a file to upload</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-submit me-2">Submit</button>
                        <a asp-action="Index" class="btn btn-cancel">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>